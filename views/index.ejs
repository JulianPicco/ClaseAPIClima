<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <style type="text/css">
      #map {
        height: 400px;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <select id="city" name="city">
            <% var options = provinces.provincias;
            for (var i = 0; i < options.length; i++) {
            %> <option value="<%= JSON.stringify(options[ i ].centroide) %>"> <%= options[i].nombre %> </option><%
            } %>
          </select>
          <input type="submit" class="ghost-button" value="Get Weather">
        </form>
        <% if(weather !== null){ %>
          <p><%= weather %></p>
        <% } %>

        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>
      </fieldset>
    </div>

    <div id="map"></div>
    <script>
      function initMap(){
        var options = {
          zoom:8,
          center:{lat:-31.4135,lng:-64.18105}
        }
        var map = new google.maps.Map(document.getElementById("map"), options);

        google.maps.event.addListener(map, "click", function (event){
          console.log({coords:event.latLng.lat()});
        })
      }
    </script>

    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCRskoY7xRkDymcPxqmfPvYTO6duhqeDSc&callback=initMap">
    </script>
  </body>
</html>
